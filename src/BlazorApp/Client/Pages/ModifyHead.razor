@page "/modify-head"

<PageTitle>Counter count: @currentCount</PageTitle>
<HeadContent>
    <meta name="twitter:title" content="Counter count for Twitter: @currentCount" />
</HeadContent>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
